<Window x:Class="LoginPrismExample.Shell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LoginPrismExample"
             xmlns:infrastructure="clr-namespace:LoginPrismExample.Infrastructure"
             xmlns:regions="http://prismlibrary.com/"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ContentControl Name="Region1"
                        regions:RegionManager.RegionName="{x:Static infrastructure:AppRegions.ShellRegion}" Margin="0" />
    </Grid>
</Window>